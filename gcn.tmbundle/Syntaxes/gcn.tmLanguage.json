{
  "name": "GCN",
  "scopeName": "source.gcn",
  "fileTypes": ["gcn"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#block-declaration" },
    { "include": "#special-block-keyword" },
    { "include": "#component-keyword" },
    { "include": "#assumption-keyword" },
    { "include": "#tag" },
    { "include": "#expectation-operator" },
    { "include": "#distribution" },
    { "include": "#variable-with-time" },
    { "include": "#number" }
  ],
  "repository": {
    "comment": {
      "name": "comment.line.number-sign.gcn",
      "match": "#.*$"
    },

    "block-declaration": {
      "match": "\\b(block)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "storage.type.gcn" },
        "2": { "name": "entity.name.function.gcn" }
      }
    },

    "component-keyword": {
      "name": "keyword.control.gcn",
      "match": "\\b(definitions|controls|objective|constraints|identities|shocks|calibration)\\b"
    },

    "special-block-keyword": {
      "name": "keyword.control.gcn",
      "match": "\\b(options|tryreduce|assumptions)\\b"
    },

    "assumption-keyword": {
      "name": "keyword.control.gcn",
      "match": "\\b(positive|negative|nonpositive|nonnegative|real|integer|finite)\\b"
    },

    "tag": {
      "name": "entity.name.tag.gcn",
      "match": "@[A-Za-z_][A-Za-z0-9_]*"
    },

    "expectation-operator": {
      "match": "\\b(E)\\s*(\\[\\s*\\])",
      "captures": {
        "1": { "name": "keyword.other.gcn" },
        "2": { "name": "keyword.other.gcn" }
      }
    },

    "distribution": {
      "match": "~\\s*(maxent|truncated)?\\s*\\(?\\s*(Beta|Gamma|Normal|HalfNormal|Exponential|Uniform|LogNormal|StudentT|Cauchy|InverseGamma|Weibull|Pareto|Dirichlet|Bernoulli|Binomial|Poisson|NegativeBinomial|Geometric|Categorical|DiscreteUniform)",
      "captures": {
        "1": { "name": "keyword.other.gcn" },
        "2": { "name": "constant.language.gcn" }
      }
    },

    "variable-with-time": {
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(\\[)\\s*(-?\\d+|ss)?\\s*(\\])",
      "captures": {
        "1": { "name": "entity.name.function.gcn" },
        "3": { "name": "constant.numeric.gcn" }
      }
    },

    "number": {
      "name": "constant.numeric.gcn",
      "match": "(?<!\\w)\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?(?!\\w)"
    }
  }
}
